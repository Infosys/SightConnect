{
  "title": "Doctor Consent Form",
  "description": "Medical Consent Form for Doctor's Appointment",
  "type": "form",
  "sections": [
    {
      "sectionTitle": "Personal Information",
      "fields": [
        {
          "type": "TEXTFIELD",
          "isRequired": true,
          "readOnly": false,
          "obscure": false,
          "keyBoardType": "text",
          "initialValue": null,
          "label": "First Name",
          "hint": "Enter your first name",
          "validation": {
            "pattern": "^[a-zA-Z]+$",
            "errorMessage": "Please enter a valid first name (letters only)."
          },
          "maxLength": 255,
          "minLength": 1,
          "maxlines": 1
        },
        {
          "type": "TEXTFIELD",
          "isRequired": true,
          "readOnly": false,
          "obscure": false,
          "keyBoardType": "text",
          "initialValue": null,
          "label": "Last Name",
          "hint": "Enter your last name",
          "validation": {
            "pattern": "^[a-zA-Z]+$",
            "errorMessage": "Please enter a valid last name (letters only)."
          },
          "maxLength": 255,
          "minLength": 1,
          "maxlines": 1
