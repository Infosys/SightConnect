{
  "title": "Doctor Consent Form",
  "description": "Medical Consent Form for Doctor's Appointment",
  "type": "form",
  "sections": [
    {
      "sectionTitle": "Personal Eye Donation Refferal Information",
      "fields": [
        {
          "type": "RADIO",
          "direction": "horizontal",
          "label": "Refferal Method",
          "isRequired": true,
          "options": [
            {
              "value": "Voluntary - Family Initated",
              "label": "Voluntary - Family Initated"
            },
            {
              "value": "Voluntary - Volunteer Motivated",
              "label": "Voluntary - Volunteer Motivated"
            },
            {"value": "HCRP - Motivated", "label": "HCRP - Motivated"}
          ],
          "initialValue": null
        },
        {
          "type": "TEXTFIELD",
          "isRequired": true,
          "readOnly": false,
          "obscure": false,
          "keyBoardType": "text",
          "initialValue": null,
          "label": "Donation Counselor/Volunteer",
          "hint": "Enter Donation Counselor/Volunteer",
          "validation": {
            "pattern": "^[a-zA-Z]+$",
            "errorMessage":
                "Please enter Donation Counselor/Volunteer (letters only)."
          },
          "maxLength": 255,
          "maxlines": 1
        },
        {
          "type": "DROPDOWN",
          "label": "Unit",
          "hint": "Select",
          "isRequired": true,
          "options": [
            {"value": "ICU", "label": "ICU"},
            {"value": "HDU", "label": "HDU"},
            {"value": "Casuality", "label": "Casuality"},
            {"value": "Emergency", "label": "Emergency"},
            {"value": "Trauma Center", "label": "Trauma Center"},
            {"value": "Mortuary", "label": "Mortuary"},
            {"value": "Ward", "label": "Ward"}
          ],
          "initialValue": null
        },
        {
          "type": "DATETIME",
          "label": "Body Available Until (Date and Time)",
          "initialValue": null,
          "isRequired": true,
          "date": {
            "type": "date",
            "startDate": "1900-01-01",
            "endDate": "2024-07-09",
            "dateFormat": "yyyy-MM-dd"
          },
          "time": {
            "type": "time",
            "format": "HH:mm:ss",
            "includeSeconds": false
          }
        },
        {
          "type": "TEXTFIELD",
          "isRequired": true,
          "readOnly": false,
          "obscure": false,
          "keyBoardType": "text",
          "initialValue": null,
          "label": "Recovery Address/ Directions",
          "hint": "Enter URecovery Address/ Directions",
          "validation": {
            "pattern": "^[a-zA-Z]+$",
            "errorMessage": "Please enter URecovery Address/ Directions"
          },
          "maxlines": 3
        },
        {
          "type": "CHECKBOX",
          "direction": "vertical",
          "label": "Conditions I agree to:",
          "isRequired": true,
          "options": [
            {"value": "condition1", "label": "Condition 1"},
            {"value": "condition2", "label": "Condition 2"}
          ],
          "initialValue": null
        },
        {
          "type": "SWITCH",
          "label": "I agree to the terms and conditions",
          "initialValue": false,
          "isRequired": true
        },
        {
          "type": "CHIPS",
          "label": "Select your preferred language",
          "isRequired": true,
          "options": [
            {"value": "condition1", "label": "Condition 1"},
            {"value": "condition2", "label": "Condition 2"}
          ]
        },
        {
          "type": "FILE",
          "label": "Health Insurance Card",
          "isRequired": true,
          "typeSupport": ["PDF", "DOCX", "DOC"],
          "hint": "Upload your health insurance card"
        }
      ]
    }
  ]
}
